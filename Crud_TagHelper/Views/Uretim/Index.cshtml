@model IEnumerable<Crud_TagHelper.Models.Makine>


<div class="row">
	<div class="col-xxl-12">
		<div class="card card-xxl mb-5">
			<div class="card-header">
				Featured
			</div>
			<div class="card-body">
				<table class="table table-striped table-bordered gy-3">
					<thead>
						<tr>
							<th>#</th>
							<th>@Html.DisplayNameFor(model => model.Tanim)</th>
							@* attributler üzeindeki veriler üzerinden calısacak bu örnekler *@
							@* DisplayNameFor -> bir model koleksiyonu üzerinde döngü yaptığınızda, her öğe için bu ifade, o öğenin belirli bir özelliğine erişmenizi sağlar. *@
						</tr>
					</thead>
					<tbody>
						@{
							foreach (var item in Model)
							{
								<tr>
									<td>
									<a asp-controller="Uretim" asp-action="Duzenle" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
									<a asp-controller="Uretim" asp-action="Detay" asp-route-id="@item.Id" class="btn btn-danger">Detay</a>
									<a asp-controller="Uretim" asp-action="Sil" asp-route-id="@item.Id" class="btn btn-primary">Sil</a>
									</td>
									<td>@Html.DisplayFor(modelItem => item.Tanim)</td>
								</tr>
							}
							//@Html.DisplayFor-> token görevi görüyor. formatlı. güven açısından bu şekilde kullanılmalıdır.
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
